<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ashishvz.billsplitz.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_billSplitFragment"
            app:destination="@id/billSplitFragment" />
    </fragment>
    <fragment
        android:id="@+id/billSplitFragment"
        android:name="com.ashishvz.billsplitz.fragments.BillSplitFragment"
        android:label="BillSplitFragment"
        tools:layout="@layout/fragment_bill_split">
        <action
            android:id="@+id/action_billSplitFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_billSplitFragment_to_newBillSplitFragment"
            app:destination="@id/newBillSplitFragment" />
    </fragment>
    <fragment
        android:id="@+id/newBillSplitFragment"
        android:name="com.ashishvz.billsplitz.fragments.NewBillSplitFragment"
        android:label="NewBillSplitFragment"
        tools:layout="@layout/fragment_new_bill_split">
        <action
            android:id="@+id/action_newBillSplitFragment_to_billSplitFragment"
            app:destination="@id/billSplitFragment" />
        <action
            android:id="@+id/action_newBillSplitFragment_to_billSplitStatusFragment"
            app:destination="@id/billSplitStatusFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ashishvz.billsplitz.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ashishvz.billsplitz.fragments.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_user_details">
        <action
            android:id="@+id/action_detailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/billSplitStatusFragment"
        android:name="com.ashishvz.billsplitz.fragments.BillSplitStatusFragment"
        android:label="BillSplitStatusFragment"
        tools:layout="@layout/fragment_split_status">
        <action
            android:id="@+id/action_billSplitStatusFragment_to_newBillSplitFragment"
            app:destination="@id/newBillSplitFragment" />
    </fragment>
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.ashishvz.billsplitz.fragments.TransactionsFragment"
        android:label="TransactionsFragment"
        tools:layout="@layout/fragment_transactions"/>
</navigation>